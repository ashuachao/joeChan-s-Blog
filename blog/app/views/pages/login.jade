doctype html
html
	head
		meta(charset='utf-8')
		title Login
		include ../includes/head
	body
		.container
			//- .center-block
			//- 	span.label.label-danger #{pass}
			.alert.alert-danger.center-block.alert-dismissible(id='showError',hidden)
					button.close(type='button',data-dismiss='alert')
						span &times
					p.text-center
						strong 用户名或者密码错误~
			form.well(id='joelogin',method='post',action='')
				.form-group
					label.sr-only(for='inputName') User Name
					input.form-control(id='inputName',type='text',name='name',placeholder='YOUR NAME')
				.form-group
					label.sr-only(for='inputPassword') User Password
					input.form-control(id='inputPassword',type='password',name='password',placeholder='Password')
				.checkbox
					label 
						input(type='checkbox') 
						span RememberMe
				button.center-block.btn.btn-success(type='submit',id='send') Login
	script(src='/javascripts/login.js')