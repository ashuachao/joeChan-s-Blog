doctype html
html
	head
		meta(charset='utf-8')
		title Edit
		include ../../includes/head
	body
		.container(id='content')
			.row.center-block
				form.form-horizontal(method='post',action='/admin/article/save',enctype="multipart/form-data")
					//- if article._id
						input(type='hidden',name='article[_id]',value='#{article._id}')
					//- .form-group
					//- 		label.col-sm-2.control-label 文章类别
					//- 		.col-sm-10
					//- 			input#articleTag.form-control(type='text',name='article[tag]',value='article.tag')
					//- .form-group
					//- 		label.col-sm-2.control-label 选择分类
					//- 		each cata in catagories
					//- 			label
					//- 		.col-sm-10
					//- 			input#articleTag.form-control(type='text',name='article[tag]',value='article.tag')
					.form-group
							input#articleId.form-control(type='hidden',name='article[id]',value=article.id)
					.form-group
						label.col-sm-2.control-label 文章名称
						.col-sm-10
							input#articleTitle.form-control(type='text',name='article[title]',value=article.title)
					.form-group
						label.col-sm-2.control-label 文章作者
						.col-sm-10
							input#articleAuthor.form-control(type='text',name='article[author]',value=article.author)
					.form-group
						label.col-sm-2.control-label 分类选择
						each cat in catagories
							label.radio-inline
								if article.catagory
									input(type="radio", name="article[catagory]", value=cat._id, checked=cat._id.toString()==article.catagory.toString())
								else
									input(type="radio", name="article[catagory]", value=cat._id)
								| #{cat.name}
					//- .form-group
					//- 	label.col-sm-2.control-label 文章分类
					//- 	.col-sm-10
					//- 		input#articleCatagory.form-control(type='text',name='article[catagoryName]')
					.form-group
						label.col-sm-2.control-label 文章封面
						.col-sm-10
							input#uploadPoster(type='file',name='uploadPoster')
					.form-group
						label.col-sm-2.control-label 文章内容
						.col-sm-10
							textarea#articleContent.form-control(name='article[content]',value=article.content,rows='10')
					.form-group
						button.center-block.btn.btn-primary(type="submit") 提交

