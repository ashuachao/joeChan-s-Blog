doctype html
html
	head
		meta(charset='utf-8')
		title #{title}
		include ../../includes/head
	body
		.container(id='content')
			.center-block.clearfix
				a.pull-right(href='/user/logout')
					.label.label-danger Logout
				.pull-left
					span Welcome,
					span.label.label-warning #{user.name}
			br
			.center-block
				ul.nav.nav-pills.nav-justified(id='joelist')
					li(id='articleMan')
						a(id='articleMan',href='/admin/articleManage') articleMan
					li(id='collectMan')
						a(id='collectMan',href='/admin/collectManage') collectMan
					li(id='commentMan')
						a(id='commentMan',href='/admin/commentManage') commentMan
					li(id='aboutMeMan')
						a(id='aboutMeMan',href='/admin/aboutMeManage') aboutMeMan
					li(id='catalogMan')
						a(id='aboutMeMan',href='/admin/catalogManage') catalogMan
			br
			div(id='callback')
	script(src="http://cdn.bootcss.com/jquery.pjax/1.9.6/jquery.pjax.js")
	script(src="/javascripts/admin.js")
			